{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [

        {
            "name": "PowerShell Launch Current File",
            "type": "PowerShell",
            "request": "launch",
            "script": "${file}",
            "cwd": "${cwd}"
        },
        {
            "name": "make doku",
            "type": "PowerShell",
            "request": "launch",
            "script": "${workspaceFolder}/doku/makeall.ps1",
            "cwd": "${cwd}"
        },
        
        {
            "name": "make help",
            "type": "PowerShell",
            "request": "launch",
            "script": "${workspaceFolder}/doku_help/makeall.ps1",
            "cwd": "${cwd}"
        },
        
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Python: FotoView",
            "type": "debugpy",
            "request": "launch",
            "program": "${fileDirname}/FotoAlbum.pyw",
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {"PYDEVD_WARN_SLOW_RESOLVE_TIMEOUT": "2"}
        }
    ]
}